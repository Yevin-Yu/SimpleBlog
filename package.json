{
  "name": "personal-blog",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "npm run ensure:ids && npm run generate:contributions && vite",
    "build": "npm run ensure:ids && tsc && npm run generate:contributions && vite build && npm run generate:sitemap && npm run generate:ssg",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "ensure:ids": "node scripts/ensure-blog-ids.js",
    "generate:contributions": "node scripts/generate-contributions.js",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "generate:ssg": "node scripts/generate-ssg-pages.js"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.9.0",
    "markdown-it": "^13.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "terser": "^5.44.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^5.0.8"
  }
}
